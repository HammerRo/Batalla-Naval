{
  "name": "battleship-game",
  "version": "2.0.0",
  "description": "Juego de Batalla Naval mejorado - Proyecto Ingeniería de Software 2",
  "main": "src/js/main.js",
  "type": "module",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx live-server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "build": "npm run lint && npm run test"
  },
  "keywords": [
    "battleship",
    "game",
    "javascript",
    "es6",
    "oop"
  ],
  "author": "Equipo Ingeniería de Software 2",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/main.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
  }
}